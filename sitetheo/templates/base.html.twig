<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
        		<script src="https://kit.fontawesome.com/88b3df3889.js" crossorigin="anonymous"></script>
    {% block stylesheets %}{% endblock %}

    <!-- Popper.js and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- JavaScripts -->
    {% block javascripts %}{% endblock %}
</head>
<style>
a {
	text-decoration: none;
}
p {
	text-decoration: none;
}fony
</style>

<!-- le header -->
<nav class="cc-navbar navbar navbar-expand-lg navbar-dark position-fixed w-100">
    <div class="container-fluid">
        <!-- Marque de la navbar -->
        <a class="navbar-brand text-uppercase mx-4 py-3 fw-bolder" style='color:white;' href="{{ path('app_accueil') }}">The District</a>

        <!-- Bouton de bascule pour la navbar en version mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Contenu de la navbar -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <!-- Liens de navigation -->
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" aria-current="page" href="{{ path('app_accueil') }}" style="color: #fff">Accueil</a>
                </li>
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" href="{{ path('app_categories') }}" style="color: #fff">Découvrir</a>
                </li>
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" href="{{ path('app_plats') }}" style="color: #fff">Plats</a>
                </li>
                <li class="nav-item pe-4">
                    <a class="btn btn-order rounded-0 active" href="{{ path('app_panier') }}" style="color: #fff">Passer une commande</a>
                </li>

                <!-- Lien spécifique au rôle "Chef" -->
                {% if is_granted('ROLE_CHEF') %}
                    <li class="nav-item pe-4">
                        <a class="btn btn-order rounded-0 {% if is_granted('ROLE_CHEF') %}active{% endif %}" href="{{ path('chef_dashboard') }}" style="color: #fff">Chef</a>
                    </li>
                {% endif %}

                <!-- Lien de connexion/déconnexion -->
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item pe-4 pt-2">
                        <a class="btn btn-order rounded-0 active" href="{{ path('app_logout') }}" style="color: #fff">Déconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item pe-4 pt-2">
                        <a class="btn btn-order rounded-0 active" href="{{ path('app_login') }}" style="color: #fff" id="monCompteBtn" title="Inscription/Connexion">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>



<!-- Contenu du body -->
